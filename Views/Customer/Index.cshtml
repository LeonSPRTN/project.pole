@using Customer = project.pole.Models.Customer

@{
    ViewBag.Title = "Список заказчиков";
    Layout = "_Layout";
}

<div>

    <button type="button" onclick="location.href='@Url.RouteUrl("customer_create_route")'">Добавить</button>
    
    <h3>@ViewBag.Title</h3>
    <table>
        <tr class="card-header">
            <td>
                <p>Объекты</p>
            </td>
        </tr>
        @foreach (Customer customer in Model)
        {
            <tr class="border-bottom">
                <td class="border-0">
                    <a asp-route="object_show_route" asp-route-id="@customer.Id">@customer.Name</a>
                </td>
                <td>
                    <a asp-route="object_delete_route" asp-route-id="@customer.Id">Удалить</a>
                </td>
            </tr>
        }
    </table>
</div>
